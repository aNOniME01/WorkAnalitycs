<Window x:Class="WorkAnalitycsWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WorkAnalitycsWPF"
        mc:Ignorable="d" WindowStyle="None" Loaded="Window_Loaded" MinHeight="300" MinWidth="200"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Grid Background="#E9ECEF" Grid.ColumnSpan="2" MouseDown="Grid_MouseDown">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="30"/>
                <ColumnDefinition Width="30"/>
            </Grid.ColumnDefinitions>


            <Button Grid.Column="1" x:Name="ToTaskbar" 
                    Click="ToTaskbar_Click"
                    Style="{StaticResource ToTaskbar}"/>


            <Button Grid.Column="2" x:Name="CloseButton"
                    Click="CloseButton_Click"
                    Style="{StaticResource CloseWindow}"/>


        </Grid>

        <Frame x:Name="frame" Grid.Row="1"/>
    </Grid>
</Window>
